<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="wrap_content"
  android:gravity="center_vertical"
  android:padding="5dip"
  style="@style/listItemStyle"
  > 
  <ImageView
    android:id="@+id/friendsRequestItemPhoto"
	android:layout_height="44dip"
	android:layout_width="44dip"
    android:background="@drawable/photo_background"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true"
    android:padding="3dip"
    android:src="@drawable/blank_boy"
    android:scaleType="fitXY" />
      
  <TextView
    android:id="@+id/friendRequestItemName"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textColor="@color/black_end"
    android:textAppearance="@android:style/TextAppearance.Medium" 
    android:singleLine="true"
    android:text="鲶鱼哥哥"
    android:paddingLeft="10dip" 
    android:layout_centerVertical="true"
    android:layout_toRightOf="@+id/friendsRequestItemPhoto"/>
    
  <Button
    android:layout_width="40dip"
    android:layout_height="30dip"
    android:textAppearance="@android:style/TextAppearance.Small"
    android:text="@string/request_ignore_label" 
    android:id="@+id/requestIgnoreButton"
    android:background="@color/blue_start"  
    android:layout_marginRight="2dip"
    android:layout_marginLeft="2dip" 
    android:textColor="@color/white"
    android:layout_centerVertical="true" 
    android:layout_alignParentRight="true"/>
  <Button
    android:layout_width="65dip"
    android:layout_height="30dip"
    android:textAppearance="@android:style/TextAppearance.Small"
    android:text="@string/request_comfirm_label" 
    android:id="@+id/requestConfirmButton"
    android:background="@color/blue_start"  
    android:layout_marginLeft="2dip"
    android:layout_marginRight="5dip" 
    android:textColor="@color/white" 
    android:layout_centerVertical="true"
    android:layout_toLeftOf="@+id/requestIgnoreButton"/>
   
</RelativeLayout>